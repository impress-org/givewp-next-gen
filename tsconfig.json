{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "lib": [
            "esnext",
            "dom"
        ],
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "allowJs": true,
        "strict": false,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "plugins": [
            {
                "name": "typescript-plugin-css-modules"
            }
        ],
        "paths": {
            "@givewp/forms/types": [
                "./src/DonationForms/resources/types.ts"
            ],
            "@givewp/forms/propTypes": [
                "./src/DonationForms/resources/propTypes.ts"
            ],
            "@givewp/forms/app/*": [
                "./src/DonationForms/resources/app/*"
            ],
            "@givewp/form-builder/*": [
                "./src/FormBuilder/resources/js/form-builder/src/*"
            ]
        }
    },
    "include": [
        "./src",
        "./globals.d.ts"
    ]
}
